{
  "name": "@rorsach/sonic-form",
  "version": "1.0.0",
  "description": "A lightweight React form validation hook with natural event-driven validation",
  "main": "lib/index.js",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit",
    "lint": "npm run typecheck && eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build",
    "examples": "cd examples && vite"
  },
  "keywords": [
    "react",
    "form",
    "validation",
    "hook",
    "useForm",
    "lightweight"
  ],
  "author": "rorsach",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rorsach/sonic-form.git"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/js": "^9.34.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitejs/plugin-react": "^5.0.1",
    "babel-jest": "^30.0.5",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.3.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^30.0.5",
    "jiti": "^2.5.1",
    "prettier": "^2.8.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript-eslint": "^8.40.0",
    "vite": "^7.1.3"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
